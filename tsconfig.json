{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "types",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "*": [
        "*",
        "src/*",
        "test/*"
      ]
    },
    "removeComments": true,
    "sourceMap": false,
    "target": "ES2019"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests/**/*"]
}
