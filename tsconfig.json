{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "types",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "*": ["src/*", "test/*"]
    },
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2019"
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules", "tests/**/*"]
}
